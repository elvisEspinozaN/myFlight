<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/header.ejs') %>
    <main class="container">
        <div class="col-sm-6">
            <form action="/dashboard/<%= flight._id %>?_method=PUT" method="POST">
                <div class="user_info">
                    <div class="col-sm-12">
                        <h2>Edit Your Flight</h2>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="">Date</label>
                            <input type="text" class="form-control" name="date" placeholder="Date">
                        </div>
                        <div class="form-group">
                            <label for="">From</label>
                            <input type="text" class="form-control" name="from" placeholder="City Name">
                        </div>
                        <div class="form-group">
                            <label for="">Price</label>
                            <input type="number" class="form-control" name="price" placeholder="Price">
                        </div>
                        <div class="form-group">
                            <label for="">Airline</label>
                            <input type="text" class="form-control" name="airline" placeholder="Airline">
                        </div>
                        <div class="form-group">
                            <label for="">To</label>
                            <input type="text" class="form-control" name="to" placeholder="City Name">
                        </div>
                        <div class="form-group">
                            <label for="">Departure Time</label>
                            <input type="string" class="form-control" name="departure" placeholder="Time">
                        </div>
                        <div class="form-group">
                            <label for="">Destination Arrival</label>
                            <input type="string" class="form-control" name="arrival" placeholder="Time">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <input type="submit" value="Edit" class="form-control cus_input_btn">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
    <%- include('./partials/footer.ejs') %>
</body>

</html>